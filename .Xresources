# ~/.Xresources
# -- akosela --

# MacOSX
xterm*vt100.translations: #override \
Meta <Key> C: select-cursor-start() select-cursor-end(PRIMARY, CUT_BUFFER0) \n\
Meta <Key> V: insert-selection(PRIMARY, CUT_BUFFER0) \n\
Shift <Key> Up: scroll-back(1,page) \n\
Shift <Key> Down: scroll-forw(1,page) \n\
<Key> Up: scroll-back(1) \n\
<Key> Down: scroll-forw(1) \n\

# fonts 
# default xterm font
#xterm*font: -misc-fixed-medium-r-semicondensed--13-120-75-75-c-60-iso10646-1
#xterm*boldfont: -misc-fixed-medium-r-semicondensed--13-120-75-75-c-60-iso10646-1
# terminus
#xterm*font: -xos4-terminus-medium-r-normal--12-120-72-72-c-60-iso8859-1
#xterm*boldfont: -xos4-terminus-medium-r-normal--12-120-72-72-c-60-iso8859-1
xterm*font: -xos4-terminus-medium-r-normal--12-120-72-72-c-60-iso10646-1
xterm*boldfont: -xos4-terminus-medium-r-normal--12-120-72-72-c-60-iso10646-1

xterm*vt100*geometry: 80x36
xterm*loginShell: true
xterm*saveLines: 10000
xterm*charClass: 33:48,35:48,37:48,43:48,45-47:48,64:48,95:48,126:48
xterm*eightBitInput: false

xterm*foreground: gray
xterm*background: rgb:00/00/00

xterm*color0: rgb:00/00/00
xterm*color1: rgb:a8/00/00
xterm*color2: rgb:00/a8/00
xterm*color3: rgb:a8/54/00
xterm*color4: rgb:00/00/a8
xterm*color5: rgb:a8/00/a8
xterm*color6: rgb:00/a8/a8
xterm*color7: rgb:a8/a8/a8
xterm*color8: rgb:54/54/54
xterm*color9: rgb:fc/54/54
xterm*color10: rgb:54/fc/54
xterm*color11: rgb:fc/fc/54
xterm*color12: rgb:54/54/fc
xterm*color13: rgb:fc/54/fc
xterm*color14: rgb:54/fc/fc
xterm*color15: rgb:fc/fc/fc

xterm*boldMode: false
xterm*colorBDMode: true
xterm*colorBD: rgb:fc/fc/fc
