# ~/.Xresources

# MacOSX
xterm*vt100.translations: #override \
Meta <Key> C: select-cursor-start() select-cursor-end(PRIMARY, CUT_BUFFER0) \n\
Meta <Key> V: insert-selection(PRIMARY, CUT_BUFFER0) \n\
Shift <Key> Up: scroll-back(1,page) \n\
Shift <Key> Down: scroll-forw(1,page) \n\
<Key> Up: scroll-back(1) \n\
<Key> Down: scroll-forw(1) \n\

# fonts 
#xterm*font: -misc-fixed-medium-r-semicondensed--13-120-75-75-c-60-iso10646-1
xterm*font: -xos4-terminus-medium-r-normal--12-120-72-72-c-60-iso10646-1
#xterm*font: -xos4-terminus-medium-r-normal--12-120-72-72-c-60-iso8859-1

xterm*vt100*geometry: 80x36
xterm*loginShell: true
xterm*saveLines: 10000
xterm*charClass: 33:48,35:48,37:48,43:48,45-47:48,64:48,95:48,126:48
xterm*eightBitInput: false

# acme colors
#xterm*foreground: black
#xterm*background: rgb:ff/ff/ea
#xterm*colorBD: black

# dos colors
#xterm*foreground: gray
#xterm*background: rgb:00/00/00
#xterm*colorBD: rgb:fc/fc/fc

xterm*foreground: gray
xterm*background: darkblue
xterm*colorBD: white

xterm*color0: rgb:00/00/00      # black
xterm*color1: rgb:a8/00/00      # blue
xterm*color2: rgb:00/a8/00      # green
xterm*color3: rgb:a8/54/00      # cyan
xterm*color4: rgb:00/00/a8      # red
xterm*color5: rgb:a8/00/a8      # magenta
xterm*color6: rgb:00/a8/a8      # brown
xterm*color7: rgb:a8/a8/a8      # gray
xterm*color8: rgb:54/54/54      # dark gray
xterm*color9: rgb:fc/54/54      # bright blue
xterm*color10: rgb:54/fc/54     # bright green
xterm*color11: rgb:fc/fc/54     # bright cyan
xterm*color12: rgb:54/54/fc     # bright red
xterm*color13: rgb:fc/54/fc     # bright magenta
xterm*color14: rgb:54/fc/fc     # bright yellow
xterm*color15: rgb:fc/fc/fc     # bright white

xterm*allowBoldFonts: false
xterm*boldMode: false
xterm*colorBDMode: true
